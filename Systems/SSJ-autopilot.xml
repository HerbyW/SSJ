<?xml version="1.0"?>


<PropertyList>

  <predict-simple>
     <input>/autopilot/internal/nav1-heading-error-deg</input>
     <output>/autopilot/internal/nav1-heading-error-lookahead-deg</output>
     <seconds>10.0</seconds>
     <filter-gain>0.0</filter-gain>
  </predict-simple>


  <!-- =============================================================== -->
  <!-- Roll Axis Modes                                                 -->
  <!-- =============================================================== -->

  <pid-controller>
    <name>TO/GA1</name>
    <debug>false</debug>
    <enable>
           <condition>
               <and>
                   <equals>    
                       <property>/instrumentation/afds/ap-modes/roll-mode</property>
                       <value>TO/GA</value>
                   </equals>
                   <equals>      
                       <property>/instrumentation/afds/inputs/AP</property>
                       <value>true</value>
                   </equals>
               </and>
           </condition>
       </enable>
    <input>
      <property>/orientation/roll-deg</property>
    </input>
    <reference>
      <value>0.0</value>
    </reference>
    <output>
      <property>/controls/flight/aileron-trim</property>
    </output>
    <config>
      <Kp>0.025</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>8.0</Ti>
      <Td>0.00001</Td>
      <u_min>-1.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>

  <!-- Heading Hold  -->

  <pid-controller>
    <name>Heading Hold 1</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/roll-mode</property>
      <value>HDG SEL</value>
    </enable>
    <input>
      <property>/autopilot/internal/fdm-heading-bug-error-deg</property>
    </input>
    <reference>
      <value>0.0</value>
    </reference>
    <output>
      <property>/autopilot/internal/target-roll-deg</property>
    </output>
    <config>
      <Kp>-3.0</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.00001</Td>
      <u_min>
        <property>/instrumentation/afds/settings/bank-min</property>
        </u_min>
      <u_max>
        <property>/instrumentation/afds/settings/bank-max</property>
      </u_max>
    </config>
  </pid-controller>
  
  <pid-controller>
    <name>Heading Hold 2</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/roll-mode</property>
      <value>HDG SEL</value>      
    </enable>
    <input>
      <property>/orientation/roll-deg</property>
    </input>
    <reference>
      <property>/autopilot/internal/target-roll-deg</property>
    </reference>
    <output>
      <property>/controls/flight/aileron-trim-filter</property>
    </output>
    <config>
      <Kp>0.065</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.00001</Td>
      <u_min>-1.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>
  
  

  <pid-controller>
    <name>LNAV FMS</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/roll-mode</property>
      <value>LNAV</value>
    </enable>
    <input>
      <property>/instrumentation/afds/settings/lnav-crs</property>
    </input>
    <reference>
      <value>0.0</value>
    </reference>
    <output>
      <property>/autopilot/internal/target-roll-deg</property>
    </output>
    <config>
      <Kp>-1.0</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>1.0</Ti>
      <Td>0.00001</Td>
      <u_min>
        <property>/instrumentation/afds/settings/bank-min</property>
        </u_min>
      <u_max>
        <property>/instrumentation/afds/settings/bank-max</property>
      </u_max>
    </config>
  </pid-controller>

  <filter>
    <name>LNAV spike filter</name>
    <debug>false</debug>
    <type>noise-spike</type>
    <input>/autopilot/internal/target-roll-deg</input>
    <output>/autopilot/internal/lnav-target-roll-deg-filtered</output>
    <max-rate-of-change>10.0</max-rate-of-change>
  </filter>
  

  <pid-controller>
    <name>LNAV 2</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/roll-mode</property>
      <value>LNAV</value>      
    </enable>
    <input>
      <property>/orientation/roll-deg</property>
    </input>
    <reference>
      <property>/autopilot/internal/lnav-target-roll-deg-filtered</property>
    </reference>
    <output>
      <property>/controls/flight/aileron-trim</property>
    </output>
    <config>
      <Kp>1.0</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.1</Td>
      <u_min>-0.35</u_min>
      <u_max>0.35</u_max>
    </config>
  </pid-controller>

  <pi-simple-controller>
    <name>LOC Hold 1</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/roll-mode</property>
      <value>LOC</value>
    </enable>
    <input>
      <property>/autopilot/internal/nav1-heading-error-lookahead-deg</property>
    </input>
    <reference>
      <value>0.0</value>
    </reference>
    <output>
      <property>/autopilot/internal/target-roll-deg</property>
    </output>
    <config>
      <Kp>-1.0</Kp>
      <Ki>0.0</Ki>
      <u_min>
        <property>/instrumentation/afds/settings/bank-min</property>
        </u_min>
      <u_max>
        <property>/instrumentation/afds/settings/bank-max</property>
      </u_max>
    </config>
   </pi-simple-controller>

  <pid-controller>
    <name>LOC stage 2</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/roll-mode</property>
      <value>LOC</value>      
    </enable>
    <input>
      <property>/orientation/roll-deg</property>
    </input>
    <reference>
      <property>/autopilot/internal/target-roll-deg</property>
    </reference>
    <output>
      <property>/controls/flight/aileron-trim-filter</property>
    </output>
    <config>
      <Kp>0.055</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.00001</Td>
      <u_min>-0.5</u_min>
      <u_max>0.5</u_max>
    </config>
  </pid-controller>

  <!--Stage 3 LOC and HDG SEL-->
  
  <filter>
      <name>AILERON Trim FILTER</name>
      <debug>false</debug>
      <feedback-if-disabled>false</feedback-if-disabled>
      <initialize-to>output</initialize-to>
      <enable>
          <condition>
              <or>
                  <equals>
                      <property>/instrumentation/afds/ap-modes/roll-mode</property>
                      <value>LOC</value>      
                  </equals>
                  <equals> 
                      <property>/instrumentation/afds/ap-modes/roll-mode</property>
                      <value>HDG SEL</value>
                  </equals> 
              </or> 
          </condition>
      </enable>
      <input>
          <property>/controls/flight/aileron-trim-filter</property>
      </input>
      <output>/controls/flight/aileron-trim</output>
      <type>noise-spike</type>
      <max-rate-of-change>2.0</max-rate-of-change>
  </filter>

  <pi-simple-controller>
    <name>Yaw Damper</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/inputs/AP</property>
      <value>true</value>
    </enable>
    <input>
      <property>/orientation/roll-deg</property>
    </input>
    <reference>0.0</reference>
    <output>
	<property>/controls/flight/rudder-trim</property>
      </output>
      <config>
	<Kp>-0.004</Kp>
	<u_min>-0.4</u_min>
	<u_max>0.4</u_max>
      </config>
    </pi-simple-controller>
  

 <!-- =============================================================== -->
 <!-- Pitch Axis Modes                                                -->
 <!-- =============================================================== -->

 <pi-simple-controller>
    <name>TO/GA Stage 1</name>
    <debug>false</debug>
    <enable>
           <condition>
               <and>
                   <equals>    
                       <property>/instrumentation/afds/ap-modes/pitch-mode</property>
                       <value>TO/GA</value>
                   </equals>
                   <equals>      
                       <property>/instrumentation/afds/inputs/AP</property>
                       <value>true</value>
                   </equals>
               </and>
           </condition>
       </enable>
    <input>
      <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    </input>
    <reference>
      <value>10000</value>
    </reference>
    <output>
      <property>/autopilot/internal/target-climb-rate-fps</property>
    </output>
    <config>
      <Kp>0.3</Kp>
      <Ki>0.0</Ki>
      <u_min>-16.67</u_min>
      <u_max>33.33</u_max>
    </config>
   </pi-simple-controller>

   <pid-controller>
       <name>TO/GA Stage 2</name>
       <debug>false</debug>
       <enable>
           <condition>
               <and>
                   <equals>    
                       <property>/instrumentation/afds/ap-modes/pitch-mode</property>
                       <value>TO/GA</value>
                   </equals>
                   <equals>      
                       <property>/instrumentation/afds/inputs/AP</property>
                       <value>true</value>
                   </equals>
               </and>
           </condition>
       </enable>
       <input>
           <property>/velocities/vertical-speed-fps</property>
       </input>
       <reference>
           <property>/autopilot/internal/target-climb-rate-fps</property>
       </reference>
       <output>
           <property>/controls/flight/elevator-trim</property>
       </output>
       <config>
           <Kp>-0.01</Kp>
           <beta>1.0</beta>
           <alpha>0.1</alpha>
           <gamma>0.0</gamma>
           <Ti>10.0</Ti>
           <Td>0.00001</Td>
           <u_min>-0.8</u_min>
           <u_max>0.8</u_max>
       </config>
   </pid-controller>

  <pi-simple-controller>
    <name>Altitude Stage 1</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/pitch-mode</property>
      <value>ALT</value>
    </enable>
    <input>
      <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    </input>
    <reference>
      <property>/autopilot/settings/target-altitude-ft</property>
    </reference>
    <output>
      <property>/autopilot/internal/target-climb-rate-fps</property>
    </output>
    <config>
      <Kp>0.04</Kp>
      <Ki>0.0</Ki>
      <u_min>-16.67</u_min>
      <u_max>33.33</u_max>
    </config>
  </pi-simple-controller>

  <filter>
    <name>Altitude hold spike filter</name>
    <debug>false</debug>
    <type>noise-spike</type>
    <input>/autopilot/internal/target-climb-rate-fps</input>
    <output>/autopilot/internal/target-climb-rate-fps-filtered</output>
    <max-rate-of-change>1.0</max-rate-of-change>
  </filter>
  
  <pid-controller>
    <name>Altitude Hold (Altimeter based) Stage 2</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/pitch-mode</property>
      <value>ALT</value>      
    </enable>
    <input>
      <property>/velocities/vertical-speed-fps</property>
    </input>
    <reference>
      <property>/autopilot/internal/target-climb-rate-fps-filtered</property>
    </reference>
    <output>
      <property>/controls/flight/elevator-trim</property>
    </output>
    <config>
      <Kp>-0.004</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.00001</Td>
      <u_min>-0.8</u_min>
      <u_max>0.8</u_max>
    </config>
  </pid-controller>

  <pi-simple-controller>
    <name>VNAV Altitude Stage 1</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/pitch-mode</property>
      <value>VNAV ALT</value>
    </enable>
    <input>
      <property>/instrumentation/altimeter/indicated-altitude-ft</property>
    </input>
    <reference>
      <property>/instrumentation/afds/settings/vnav-alt</property>
    </reference>
    <output>
      <property>/autopilot/internal/target-climb-rate-fps</property>
    </output>
    <config>
      <Kp>0.3</Kp>
      <Ki>0.0</Ki>
      <u_min>-16.67</u_min>
      <u_max>33.33</u_max>
    </config>
  </pi-simple-controller>

  <pid-controller>
    <name>Altitude Hold (Altimeter based) Stage 3</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/pitch-mode</property>
      <value>VNAV ALT</value>      
    </enable>
    <input>
      <property>/velocities/vertical-speed-fps</property>
    </input>
    <reference>
      <property>/autopilot/internal/target-climb-rate-fps</property>
    </reference>
    <output>
      <property>/controls/flight/elevator-trim</property>
    </output>
    <config>
      <Kp>-0.01</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.00001</Td>
      <u_min>-0.8</u_min>
      <u_max>0.8</u_max>
    </config>
  </pid-controller>

    <!-- Glideslope hold 3 Stage controler -->

  <pi-simple-controller>
    <name>Glideslope Hold</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/pitch-mode</property>
      <value>G/S</value>      
    </enable>
    <input>
      <property>/velocities/vertical-speed-fps</property>
    </input>
    <reference>
      <property>/instrumentation/nav[0]/gs-rate-of-climb</property>
    </reference>
    <output>
      <property>/autopilot/internal/target-climb-rate-fps</property>
    </output>
    <config>
      <Kp>2.0</Kp>          <!-- proportional gain -->
      <Ki>0.0</Ki>          <!-- integral gain -->
      <u_min>-25.0</u_min> <!-- minimum output clamp -->
      <u_max>8.0</u_max>   <!-- maximum output clamp -->
    </config>
  </pi-simple-controller>  
  
  <!--Stage 2 -->
  
  <pid-controller>
    <name>Elevator Trim Filter Controler</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/pitch-mode</property>
      <value>G/S</value>      
    </enable>
    <input>
      <property>/velocities/vertical-speed-fps</property>
    </input>
    <reference>
      <property>/autopilot/internal/target-climb-rate-fps</property>
    </reference>
    <output>
      <property>/controls/flight/elevator-trim-filter</property>
    </output>
    <config>
      <Kp>-0.0015</Kp><!-- 0.065 -->
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.00001</Td>
      <u_min>-1.0</u_min>
      <u_max> 1.0</u_max>
    </config>
  </pid-controller>
  
  <!--Stage 3 -->
  
  <filter>
    <name>PITCH FILTER</name>
    <debug>false</debug>
    <feedback-if-disabled>false</feedback-if-disabled>
    <initialize-to>output</initialize-to>
    <enable>
      <property>/instrumentation/afds/ap-modes/pitch-mode</property>
      <value>G/S</value>      
    </enable>
    <input>
      <property>/controls/flight/elevator-trim-filter</property>
    </input>
    <output>/controls/flight/elevator-trim</output>
    <type>noise-spike</type>
    <max-rate-of-change>0.1</max-rate-of-change>
  </filter>  
  
  <!-- vertical speed hold -->
  <pid-controller>
    <name>Vertical Speed Hold</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/pitch-mode</property>
      <value>V/S</value>      
    </enable>
    <input>
      <property>/velocities/vertical-speed-fps</property>
    </input>
    <reference>
      <property>/autopilot/settings/vertical-speed-fpm</property>
      <scale>0.01666666</scale>
    </reference>
    <output>
      <property>/controls/flight/elevator-trim</property>
    </output>
    <config>
      <Kp>-0.0015</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>10.0</Ti>
      <Td>0.00001</Td>
      <u_min>-0.8</u_min>
      <u_max>0.8</u_max>
    </config>
  </pid-controller>

  <!-- vertical speed hold -->
  <pid-controller>
    <name>Flight Path Hold</name>
    <debug>false</debug>
    <enable>
      <property>/instrumentation/afds/ap-modes/pitch-mode</property>
      <value>FPA</value>      
    </enable>
    <input>
      <property>/autopilot/internal/fpa</property>
    </input>
    <reference>
      <property>/autopilot/settings/flight-path-angle</property>
    </reference>
    <output>
      <property>/controls/flight/elevator-trim</property>
    </output>
    <config>
      <Kp>-0.15</Kp>
      <beta>1.0</beta>
      <alpha>0.1</alpha>
      <gamma>0.0</gamma>
      <Ti>1.0</Ti>
      <Td>0.0</Td>
      <u_min>-0.8</u_min>
      <u_max>0.8</u_max>
    </config>
  </pid-controller>

 <!-- =============================================================== -->
 <!-- Velocity Modes                                                  -->
 <!-- =============================================================== -->

 <!-- Auto throttle --> 
  <pid-controller>
      <name>Auto Throttle1 ias</name>
      <debug>false</debug>
      <enable>
          <condition>
              <and>
                  <equals>
                      <property>/instrumentation/afds/ap-modes/throttle[0]</property>
                      <value>ias</value>
                  </equals>
                  <equals>
                      <property>/instrumentation/afds/ap-modes/speed-mode</property>
                      <value>THR</value>
                  </equals>
              </and>
          </condition>
      </enable>
      <input>
          <property>/velocities/airspeed-kt</property>
      </input>
      <reference>
          <property>/autopilot/settings/target-speed-kt</property>
      </reference>
      <output>
          <property>/controls/engines/engine[0]/throttle</property>
      </output>
      <config>
          <Kp>0.15</Kp>
          <beta>1.0</beta>
          <alpha>0.1</alpha>
          <gamma>0.0</gamma>
          <Ti>20.0</Ti>
          <Td>0.00001</Td>
          <u_min>0.0</u_min>
          <u_max>1.0</u_max>
      </config>
  </pid-controller>

    <pid-controller>
        <name>Auto Throttle2 ias</name>
        <debug>false</debug>
        <enable>
          <condition>
              <and>
                  <equals>
                      <property>/instrumentation/afds/ap-modes/throttle[1]</property>
                      <value>ias</value>
                  </equals>
                  <equals>
                      <property>/instrumentation/afds/ap-modes/speed-mode</property>
                      <value>THR</value>
                  </equals>
              </and>
          </condition>
      </enable>
        <input>
            <property>/velocities/airspeed-kt</property>
        </input>
        <reference>
            <property>/autopilot/settings/target-speed-kt</property>
        </reference>
        <output>
            <property>/controls/engines/engine[1]/throttle</property>
        </output>
        <config>
            <Kp>0.15</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>20.0</Ti>
            <Td>0.00001</Td>
            <u_min>0.0</u_min>
            <u_max>1.0</u_max>
        </config>
    </pid-controller>

    <pid-controller>
        <name>Auto Throttle1 mach</name>
        <debug>false</debug>
        <enable>
          <condition>
              <and>
                  <equals>
                      <property>/instrumentation/afds/ap-modes/throttle[0]</property>
                      <value>mach</value>
                  </equals>
                  <equals>
                      <property>/instrumentation/afds/ap-modes/speed-mode</property>
                      <value>THR</value>
                  </equals>
              </and>
          </condition>
      </enable>
        <input>
            <property>/velocities/mach</property>
        </input>
        <reference>
            <property>/autopilot/settings/target-speed-mach</property>
        </reference>
        <output>
            <property>/controls/engines/engine[0]/throttle</property>
        </output>
        <config>
            <Kp>20.0</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>10.0</Ti>
            <Td>0.00001</Td>
            <u_min>0.0</u_min>
            <u_max>1.0</u_max>
        </config>
    </pid-controller>

    <pid-controller>
        <name>Auto Throttle2 mach</name>
        <debug>false</debug>
        <enable>
          <condition>
              <and>
                  <equals>
                      <property>/instrumentation/afds/ap-modes/throttle[1]</property>
                      <value>mach</value>
                  </equals>
                  <equals>
                      <property>/instrumentation/afds/ap-modes/speed-mode</property>
                      <value>THR</value>
                  </equals>
              </and>
          </condition>
      </enable>
        <input>
            <property>/velocities/mach</property>
        </input>
        <reference>
            <property>/autopilot/settings/target-speed-mach</property>
        </reference>
        <output>
            <property>/controls/engines/engine[1]/throttle</property>
        </output>
        <config>
            <Kp>20.0</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>10.0</Ti>
            <Td>0.00001</Td>
            <u_min>0.0</u_min>
            <u_max>1.0</u_max>
        </config>
    </pid-controller>


</PropertyList>
