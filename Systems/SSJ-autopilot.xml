        <reference>
            <property>/autopilot/settings/target-speed-mach</property>
        </reference>
        <output>
            <property>/controls/engines/engine[0]/throttle</property>
        </output>
        <config>
            <Kp>20.0</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>10.0</Ti>
            <Td>0.00001</Td>
            <u_min>0.0</u_min>
            <u_max>1.0</u_max>
        </config>
    </pid-controller>

    <pid-controller>
        <name>Auto Throttle2 mach</name>
        <debug>false</debug>
        <enable>
          <condition>
              <and>
                  <equals>
                      <property>instrumentation/afds/ap-modes/throttle[1]</property>
                      <value>mach</value>
                  </equals>
                  <equals>
                      <property>instrumentation/afds/ap-modes/speed-mode</property>
                      <value>THR</value>
                  </equals>
              </and>
          </condition>
      </enable>
        <input>
            <property>/velocities/mach</property>
        </input>
        <reference>
            <property>/autopilot/settings/target-speed-mach</property>
        </reference>
        <output>
            <property>/controls/engines/engine[1]/throttle</property>
        </output>
        <config>
            <Kp>20.0</Kp>
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <gamma>0.0</gamma>
            <Ti>10.0</Ti>
            <Td>0.00001</Td>
            <u_min>0.0</u_min>
            <u_max>1.0</u_max>
        </config>
    </pid-controller>


</PropertyList>
