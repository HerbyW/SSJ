<PropertyList>
	<particlesystem>
		<name>engine-smoke-rev</name>
		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
			<roll-deg>0</roll-deg>
			<pitch-deg>1</pitch-deg>
			<heading-deg>180</heading-deg>
		</offsets>
		<texture>smoke.png</texture>
		
		<condition>
            <and>
                <greater-than>
                    <property>engines/engine[0]/rpm</property>
                    <value>20</value>
                </greater-than>	    
                <greater-than>
                    <property>sim/multiplay/generic/float[4]</property>
                    <value>0.2</value>
                </greater-than>	    
            </and>
        </condition>
		
		<emissive>false</emissive>
		<lighting>false</lighting>
		<align>billboard</align>
		<attach>world</attach>
		<placer>
			<type>point</type>
		</placer>
		<shooter>
			<theta-min-deg>85</theta-min-deg>
			<theta-max-deg>95</theta-max-deg>
			<phi-min-deg>-5</phi-min-deg>
			<phi-max-deg> 5</phi-max-deg>
			<speed-mps>
				<value>80</value>
				<spread>1</spread>
			</speed-mps>
			<rotation-speed>
				<x-min-deg-sec>0</x-min-deg-sec>
				<y-min-deg-sec>0</y-min-deg-sec>
				<z-min-deg-sec>0</z-min-deg-sec>
				<x-max-deg-sec>0</x-max-deg-sec>
				<y-max-deg-sec>0</y-max-deg-sec>
				<z-max-deg-sec>0</z-max-deg-sec>
			</rotation-speed>
		</shooter>
		<counter>
			<particles-per-sec>
				<value>50</value>
				<spread>6</spread>
			</particles-per-sec>
		</counter>
		<particle>
			<start>
				<color>
					<red><value>0.32</value></red>
					<green><value>0.32</value></green>
					<blue><value>0.32</value></blue>
					<alpha><value>0.27</value></alpha>
				</color>
				<size>
					<value>1.5</value>
				</size>
			</start>
			<end>
				<color>
					<red><value>0.85</value></red>
					<green><value>0.85</value></green>
					<blue><value>0.85</value></blue>
					<alpha><value>0.0</value></alpha>
				</color>
				<size>
					<value>10</value>
				</size>
			</end>
			<life-sec>
				<value>1</value>
			</life-sec>
			<mass-kg>0.5</mass-kg>
			<radius-m>0.01</radius-m>
		</particle>
		<program>
			<fluid>air</fluid>
			<gravity>false</gravity>
			<wind>true</wind>
		</program>
	</particlesystem>
</PropertyList>
